<div class="flex flex-col gap-5">
  <%= render partial: "shared/user_info", locals: { user: @user } %>

  <div class="border p-3">
    <h2 class="text-2xl">Bio</h2>
    <p class="mt-2"><%= @user.bio %></p>
  </div>

  <ul class="flex flex-col gap-5">
    <% @user.recent_posts.each do |post| %>
      <li>
        <%= link_to user_post_path(@user.id, post.id) do %>
          <%= render partial: "shared/post_info", locals: { post: post } %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to user_posts_path(@user.id), class: "self-center p-3 border" do %>
    See All Posts
  <% end %>
</div>
