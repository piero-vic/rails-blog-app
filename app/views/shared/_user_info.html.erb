<div class="flex gap-5">
  <% if user.photo %>
    <%= image_tag(user.photo, :alt => "#{user.name} Photo") %>
  <% end %>
  <div class="flex flex-col justify-between grow border px-4 py-3">
    <p class="text-4xl"><%= user.name %></p>
    <p class="text-xl self-end">
      <%= "Number of posts: #{user.posts_counter || 0}" =%>
    </p>
  </div>
</div>
